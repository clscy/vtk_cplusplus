    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}/build"
    },

    "tasks": [
        {
            "taskName": "cmake",
            "command": "cmake",
            "args": ["-G",
                "Unix Makefiles",
                "-DCMAKE_BUILD_TYPE=debug",
                ".."]

        },
        {
            "taskName": "make",
            "command": "make",
            "args": [],
            
            "group": {
                "kind": "build",
                "isDefault": true
            }
            
        }
        
    ]

  
}